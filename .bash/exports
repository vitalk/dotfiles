# colorize
export TERM=xterm-256color
# make vim the default editor
export EDITOR="vim"

# add path to less compiler to $PATH
export PATH=/usr/local/share/npm/lib/node_modules/less/bin:$PATH

# keep long bash history
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# ignore some commands in history
export HISTIGNORE="ls:ls *:cd:cd -:pwd:exit:date:* --help:gitg:gg"

# virtualenv should use distribute instead of legacy setuptools
export VIRTUALENV_DISTRIBUTE=true
# pip should only run if there is a virtualenv currently activated
export PIP_REQUIRE_VIRTUALENV=true
# cache pip-installed packages to avoid re-downloading
export PIP_DOWNLOAD_CACHE=$HOME/.pip/cache

# highlight matches with grep
export GREP_OPTIONS='--color=auto'
